@model Image
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" enctype="multipart/form-data" asp-controller="Images" asp-action="Upload">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload one or more files using this form:</p>
            <input type="file" name="files" multiple />
        </div>
        <div class="col-md-10">
            <label asp-for="AlbumId" class="control-label"></label>
            <select asp-for="AlbumId" class="from-control" asp-items="ViewBag.AlbumId"></select>
        </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Upload" />
            </div>
        </div>
</form>

